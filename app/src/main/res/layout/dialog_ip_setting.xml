<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <!-- 사이즈가 고정된 View -->
    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:gravity="center" android:background="#ffffff"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:singleLine="true"
            android:text="아이피 설정"
            android:textColor="@color/black"
            android:textSize="20sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent" android:layout_marginTop="30dp"
            android:layout_height="@dimen/btn_40dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_ip01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_black_line"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:maxLength="3"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="17sp"></EditText>

            <EditText
                android:id="@+id/et_ip02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_black_line"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:maxLength="3"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="17sp"></EditText>

            <EditText
                android:id="@+id/et_ip03"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_black_line"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:maxLength="3"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="17sp"></EditText>

            <EditText
                android:id="@+id/et_ip04"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_black_line"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:maxLength="3"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="17sp"></EditText>

        </LinearLayout>

        <Button
            android:id="@+id/save"
            android:layout_width="240dp"
            android:layout_height="@dimen/btn_40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_press_login"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="center"
            android:text="확인"
            android:textColor="#ffffff"
            android:textSize="20sp"></Button>
    </LinearLayout>
</FrameLayout>
