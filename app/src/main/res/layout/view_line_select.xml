<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content" android:paddingBottom="30dp" android:paddingTop="30dp"
    android:background="#ffffff" android:gravity="center"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent" android:id="@+id/line1"
        android:layout_height="30dp" android:gravity="center">
        <View
            android:layout_width="120dp" android:background="#000000"
            android:layout_height="2dp">

        </View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:id="@+id/line2"
        android:layout_height="30dp" android:gravity="center">
        <View
            android:layout_width="120dp" android:background="#000000"
            android:layout_height="4dp">

        </View>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent" android:id="@+id/line3"
        android:layout_height="30dp" android:gravity="center">
        <View
            android:layout_width="120dp" android:background="#000000"
            android:layout_height="8dp">

        </View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:id="@+id/line4"
        android:layout_height="30dp" android:gravity="center">
        <View
            android:layout_width="120dp" android:background="#000000"
            android:layout_height="12dp">

        </View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:id="@+id/line5"
        android:layout_height="30dp" android:gravity="center">
        <View
            android:layout_width="120dp" android:background="#000000"
            android:layout_height="15dp">

        </View>
    </LinearLayout>





</LinearLayout>
