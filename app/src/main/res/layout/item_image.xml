<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/padding_90dp"
    android:layout_height="@dimen/btn_120dp"
    android:background="#000000"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/iv_dot"
        android:layout_width="@dimen/btn_5dp"
        android:layout_height="@dimen/btn_5dp"
        android:background="@drawable/img_select"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="9dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"></ImageView>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_regdate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_15dp"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="10sp"></TextView>


</LinearLayout>