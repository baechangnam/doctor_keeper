<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="@dimen/icon_40dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_black_set"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:singleLine="true"
            android:text="아이디"
            android:textColor="#ffffff"
            android:textSize="17sp"></TextView>

        <TextView
            android:id="@+id/et_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/border_black_line"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:lines="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="17sp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="@dimen/icon_40dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_black_set"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:text="비밀번호"
            android:textColor="#ffffff"
            android:textSize="17sp"></TextView>

        <TextView
            android:id="@+id/et_pass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/border_black_line"
            android:gravity="center"

            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:lines="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="17sp"></TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="@dimen/icon_40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_black_line"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:text="자동로그인 여부"
            android:textColor="@color/black"
            android:textSize="17sp"></TextView>

        <View
            android:layout_width="@dimen/icon_40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></View>

        <Button
            android:layout_width="@dimen/btn_30dp" android:id="@+id/set_login"
            android:layout_height="@dimen/btn_30dp"
            android:background="@drawable/push_on">

        </Button>
    </LinearLayout>

</LinearLayout>