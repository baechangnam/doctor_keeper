<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/icon_40dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <Button
            android:id="@+id/back"
            android:layout_width="@dimen/btn_30dp"
            android:layout_height="@dimen/btn_30dp"
            android:background="@drawable/btn_before">

        </Button>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </View>

        <Button
            android:id="@+id/write"
            android:layout_width="@dimen/btn_30dp"
            android:layout_height="@dimen/btn_30dp"
            android:background="@drawable/pencle1">

        </Button>

        <Button
            android:id="@+id/eraser"
            android:layout_width="@dimen/btn_30dp"
            android:layout_height="@dimen/btn_30dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/eraser">

        </Button>

        <Button
            android:id="@+id/record"
            android:layout_width="@dimen/btn_30dp" android:visibility="gone"
            android:layout_height="@dimen/btn_30dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/record">

        </Button>

        <Button
            android:id="@+id/save"
            android:layout_width="@dimen/btn_30dp"
            android:layout_height="@dimen/btn_30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/btn_save">

        </Button>
    </LinearLayout>


    <ScrollView
        android:id="@+id/sc_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"  android:id="@+id/pratt"
            android:orientation="vertical">

            <com.apps.doctorkeeper_android.ui.customer.PDFDrawingView
                android:id="@+id/drawing_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.apps.doctorkeeper_android.ui.customer.PDFDrawingView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
